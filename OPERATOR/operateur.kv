<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperateurWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (0, 0.306, 0.561, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'PRONTO IT'
            size_hint_x: 9
            bold: True
            color: (1,1,1,1)
        FlatButton:
            id: loggedin_user
            text: 'HI THERE'
            color: (1,1,1,1)
            underline: True
            on_release: root.logout()

    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (1,1,1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Article actuel'
            background_normal: ''
            background_color: (0.145, 0.376, 0.541, 1)
            size_hint_x: .4
        Button:
            id: cur_product
            text: 'Désignation'
            background_normal: ''
            background_color: (0.173, 0.51, 0.757, 1)
        Button: 
            id: cur_price
            text: '0.00'
            color: (0, 0, 0, 1)
            background_normal: ''
            background_color: (0.667, 0.769, 0.851, 1)
            size_hint_x: .2

    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: "vertical"
            size_hint_x: .8
            spacing: 10

            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: (0.145, 0.376, 0.541, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                    
                FlatButton:
                    text: 'Réf'
                    size_hint_x: .3
                FlatButton:
                    text: 'Qté'
                    size_hint_x: .1
                FlatButton:
                    text: 'Prix'
                    size_hint_x: .1
                FlatButton:
                    text: 'Réd'
                    size_hint_x: .1
                FlatButton:
                    text: 'Réd %'
                    size_hint_x: .1
                FlatButton:
                    text: 'TVA'
                    size_hint_x: .1

            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 30
                spacing: 5
                TextInput:
                    id: code_inp
                    size_hint_x: .3
                    multiline: False
                    on_text_validate: qty_inp.focus = True
                TextInput:
                    id: qty_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: price_inp.focus = True
                TextInput:
                    id: price_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: disc_inp.focus = True
                TextInput:
                    id: disc_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: disc_perc_inp.focus = True
                TextInput:
                    id: disc_perc_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: vat_inp.focus = True
                TextInput:
                    id: vat_inp
                    size_hint_x: .1
                    multiline: False
                    on_text_validate: root.add_to_cart()

            BoxLayout:
                id: add_to_cart
                orientation: 'vertical'
                spacing: 5
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (0.145, 0.376, 0.541, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Réf'
                        size_hint_x: .2
                    Label:
                        text: 'Qté'
                        size_hint_x: .1
                    Label:
                        text: 'Désignation'
                        size_hint_x: .6
                    Label:
                        text: 'Prix'
                        size_hint_x: .2
                    Label:
                        text: 'Réd'
                        size_hint_x: .1
                    Label:
                        text: 'TVA'
                        size_hint_x: .1
                    Label:
                        text: 'Montant'
                        size_hint_x: .2
                ScrollView:
                    GridLayout:
                        padding: (0, 5)
                        id: products
                        cols: 1
                        spacing: 15
                        size_hint_y: None
                        height: self.minimum_height
                BoxLayout:
                    orientation: "horizontal"
                    size_hint_y: .09
                    spacing: 5
                    height: 30
                    TextInput:
                        hint_text: "Raison sociale"
                        id: rs
                        multiline: False
                        on_text_validate: rc.focus = True
                    TextInput:
                        hint_text: "RC"
                        id: rc
                        multiline: False
                        on_text_validate: idf.focus = True
                    TextInput:
                        hint_text: "IF"
                        id: idf
                        multiline: False
                        on_text_validate: ice.focus = True
                    TextInput:
                        hint_text: "ICE"
                        id: ice
                        multiline: False
                        on_text_validate: rs.focus = True

        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .3
            padding: (10,0,0,0)

            TextInput:
                id: receipt_preview
                readonly: True
                text: "Bienvenue Chez\nPronto IT !\n\n315 Rue Anywhere\n80000 AlWifaq, Agadir\n0619666722\nadmin@pronto-it.com\n\n"
                #Reçu N°: ********\nDate: 24-10-2022\n\n
            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: 45
                spacing: 5
                padding: (0, 5)

                Button:
                    text: "Enregistrer"
                    background_color: (0.145, 0.376, 0.541, 1)
                    background_normal: ''
                    on_release: root.validate_transaction()
                Button:
                    text: "Effacer"
                    background_color: (0.145, 0.376, 0.541, 1)
                    background_normal: ''
                    on_release: root.clear()


    BoxLayout:
        id: footer
        size_hint_y:None
        height: 30
        canvas.before:
            Color:
                rgba: (0.145, 0.376, 0.541, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Created By Yassine El Haddad - 0619666722 - yaseentechguy@gmail.com"